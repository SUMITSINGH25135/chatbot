{
  "intents": [
      {
          "tag": "greeting",
          "patterns": ["Hi", "Hello", "Hey", "Howdy", "Hi there", "Greetings", "What's up?", "Good day"],
          "responses": ["Hello!", "Hi there!", "Good to see you!", "Greetings!", "Hey! How can I help you?"]
      },
      {
          "tag": "goodbye",
          "patterns": ["Bye", "See you later", "Goodbye", "Catch you later", "See you", "Talk to you later"],
          "responses": ["Goodbye!", "See you soon!", "Take care!", "Have a great day!"]
      },
      {
          "tag": "thanks",
          "patterns": ["Thanks", "Thank you", "That's helpful", "Thanks a lot", "Appreciate it"],
          "responses": ["You're welcome!", "Happy to help!", "No problem!", "Anytime!"]
      },
      {
          "tag": "no_answer",
          "patterns": ["", "I don't know", "Can you answer that?", "What do you think?"],
